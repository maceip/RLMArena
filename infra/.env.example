# VaaS Platform Environment Configuration
# Copy to .env and fill in values

# ===========================================
# Tailscale (Required for mesh networking)
# ===========================================
# Create at https://login.tailscale.com/admin/settings/keys
# Use reusable + ephemeral for production
TS_AUTHKEY=tskey-auth-xxxxx

# ===========================================
# Authentication & Security
# ===========================================
JWT_SECRET=your-jwt-secret-min-32-chars
API_KEY_SALT=your-api-key-salt
SESSION_SECRET=your-session-secret

# ===========================================
# Database Passwords
# ===========================================
POSTGRES_PASSWORD=your-postgres-password
CLICKHOUSE_PASSWORD=your-clickhouse-password
REDIS_PASSWORD=your-redis-password

# ===========================================
# OAuth (Dashboard)
# ===========================================
OAUTH_CLIENT_ID=your-oauth-client-id
OAUTH_CLIENT_SECRET=your-oauth-client-secret
OAUTH_ISSUER=https://auth.example.com

# ===========================================
# Training (LlamaFactory)
# ===========================================
WANDB_API_KEY=your-wandb-api-key
WANDB_PROJECT=vaas-training

# Checkpoint storage (S3-compatible)
CHECKPOINT_AWS_KEY=your-checkpoint-access-key
CHECKPOINT_AWS_SECRET=your-checkpoint-secret-key
CHECKPOINT_BUCKET=vaas-checkpoints

# ===========================================
# Model Serving (SGLang)
# ===========================================
# Tensor parallel size (number of GPUs)
SGLANG_TP_SIZE=4
# GPU memory fraction to use
SGLANG_MEM_FRACTION=0.9

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_DEFAULT=100/minute

# ===========================================
# Firecracker VMs
# ===========================================
VM_MEMORY_MB=512
VM_VCPU_COUNT=2
VM_TIMEOUT_SECONDS=30

# ===========================================
# Telemetry
# ===========================================
RETENTION_DAYS=90

# ===========================================
# Ports (Host mapping)
# ===========================================
GATEWAY_PORT=8080
DASHBOARD_PORT=3000

# ===========================================
# GitHub Container Registry
# ===========================================
GITHUB_REPOSITORY=maceip/rlmarena
VERSION=latest
